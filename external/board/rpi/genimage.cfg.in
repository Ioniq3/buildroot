image boot.vfat {
	vfat {
		files = {
#BOOT_FILES#
		}
	}

	size = 32M
}

image userdata.ext4 {
	name = "userdata"
	ext4 {
		label = "userdata"
		use-mke2fs = true
		features = "^64bit"
	}
	size = 32M
}


image sdcard.img {
	hdimage {
	}

	partition boot {
		partition-type = 0xC
		bootable = "true"
		image = "boot.vfat"
	}

	partition rootfs {
		partition-type = 0x83
		image = "rootfs.ext4"
	}

	partition userdata {
		partition-type = 0x83
		image = "userdata.ext4"
	}
}
